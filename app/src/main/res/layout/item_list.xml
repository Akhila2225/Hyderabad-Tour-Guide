<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/name_of_the_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Title"/>

            <TextView
                android:id="@+id/description_of_the_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description"/>

            <TextView
                android:id="@+id/address_of_the_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                style="@style/details"
                android:autoLink="map"/>

            <TextView
                android:id="@+id/phone_number_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                style="@style/details"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"/>

            <TextView
                android:id="@+id/timings_of_the_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/details"
                android:drawableLeft="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/cost_for_the_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/details"
                android:drawableLeft="@drawable/ic_monetization_on_black_24dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>